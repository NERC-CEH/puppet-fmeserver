RETVAL=0

# start, debug, stop, and status functions
start() {
        <%= @install_directory %>/Server/startServer.sh &
        RETVAL=$?
}

stop() {
        <%= @install_directory %>/Server/stopServer.sh
        RETVAL=$?
}


case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart)
        stop
        start
        ;;
  *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac

exit $RETVAL
